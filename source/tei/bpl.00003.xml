         <list>
            <item><span rend="bracket-right" xml:id="s13" from="#s9" to="#s14"/><handShift new="#h2"/>Orpheus Musaeus<anchor xml:id="s14"/> <note target="#s13" type="authorial">1400 (before Christ) in Greece</note></item>
